{
  "rules": {
    "presence": {
      "$roomId": {
        ".read": "auth != null",
        "$uid": {
          "$connId": {
            ".write": "auth != null && auth.uid === $uid",
            ".validate": "newData.hasChildren(['online','ts']) || newData.val() === null"
          }
        }
      }
    },
    "presenceSessions": {
      "$roomId": {
        "$uid": {
          ".read": "auth != null && auth.uid === $uid",
          "$sessionId": {
            ".write": "auth != null && auth.uid === $uid",
            ".validate": "newData.hasChildren(['online','connectedAt']) || newData.val() === null"
          }
        }
      }
    },
    "roomSync": {
      "$roomId": {
        ".read": "auth != null",
        "latest": {
          ".write": "false"
        }
      }
    }
  }
}
